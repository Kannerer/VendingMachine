@model IEnumerable<VendingMachine.Models.DrinkModel>
@{
    ViewBag.Title = "Панель управления";
}

<h1>Торговый автомат</h1>


<div class="row row=cols-1 row-cols-md-3 g-4">
    @{ foreach (var item in Model)
        {
            <div class="col">
                <div class="card text-center" style="width: 18rem;">
                    <img src="../images/128.png" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-text"> Доступно: @item.Count шт.</p>
                        <button class="btn btn-outline-warning">Редактировать</button>
                    </div>
                </div>
            </div>
        }
    }
</div>