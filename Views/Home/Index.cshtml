@model IEnumerable<VendingMachine.Models.DrinkModel>
@{
    ViewBag.Title = "Vending Machine";
}

<h1>Торговый автомат</h1>

<div class="card">
    <div class="card-body">
        Внесено денег: 0р.
        <button type="button" class="btn btn-primary">1 р.</button>
        <button type="button" class="btn btn-primary">2 р.</button>
        <button type="button" class="btn btn-primary">5 р.</button>
        <button type="button" class="btn btn-primary">10 р.</button>
    </div>
</div>

<div class="row row=cols-1 row-cols-md-3 g-4 mt-3">
    @{ foreach (var item in Model)
        {
            <div class="col mt-3">
                <div class="card text-center" style="width: 18rem;">
                    <img src="../images/128.png" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-text" id="count-@item.Id"> Доступно: @item.Count шт.</p>
                        <button class="btn btn-primary" disabled=@(!item.Available) id="button-@item.Id">@item.Price р.</button>
                    </div>
                </div>
            </div>
            <script>
                    $("#button-@item.Id").click(function () {
                        $.ajax({
                            method: 'POST',
                            url: '/Home/BuyDrink',
                            data: { drink_id: @item.Id },
                            success: function (data) {
                                if (data.Available) {
                                    $("#button-@item.Id").prop('disabled', false);
                                } else {
                                    $("#button-@item.Id").prop('disabled', true);
                                }
                                $("#count-@item.Id").text(`Доступно: ${data.Count} шт.`);
                            }
                        })
                    })
            </script>
        }
    }
</div>
